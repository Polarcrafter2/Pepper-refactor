{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "vite dev",
            "type": "shell",
            "command": "npm run dev",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "."
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Dev server running at.*",
                    "endsPattern": ".*ready in.*"
                }
            }
        }
    ]
}